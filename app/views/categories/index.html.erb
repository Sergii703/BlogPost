<h1><%= t('.title') %></h1>

<div class ="buttons_panel">
	<%= link_to 'New Category', new_category_path, class: 'btn btn_outline_primary btn-sm' %>
</div>

<section id="categories">
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Names</th>
				<th>Parent category</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each_with_index do |category, index| %>
				<tr>
					<td><%= index +1 %></td>
					<td><%= category.name %></td>
					<td><%= category.parent.name if category.parent.present? %></td>
					<td>
						<%= link_to 'Change', edit_category_path(category), class: 'btn btn_outline_primary btn-sm' %>
						<%= link_to 'Delete', edit_category_path(category), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn_danger btn-sm' %>	
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>	
</section>